---
import { getCollection } from "astro:content";
import AuthorCard from "src/components/AuthorCard.astro";
import { siteConfig } from "src/configs/site-configs";
import Layout from "@layouts/Layout.astro";

const authors = await getCollection("author");
---

<Layout title="Listado de autores">
  <section class="container px-6 py-10 mx-auto">
    <h1
      class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
    >
      {siteConfig.title}
    </h1>
    <a class="mr-2" href="/">Inicio</a>
    <a class="mr-2" href="/blog/1">Blog paginado</a>
    <a class="mr-2" href="/authors">Autores</a>
  </section>

  <section class="mx-10 grid grid-cols-1 sm:grid-cols-2 gap-2">
    <!-- AuthorCard -->
    {authors.map((author) => <AuthorCard author={author} />)}
  </section>
</Layout>
<style>
  a {
    @apply text-blue-500 hover:underline;
  }
</style>
