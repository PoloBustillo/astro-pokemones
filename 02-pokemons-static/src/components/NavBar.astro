---
const links = [
  { href: "/", text: "Listado" },
  { href: "/pokemons/1", text: "Paginado" },
  { href: "/favoritos", text: "Favoritos" },
];

const currentPath = Astro.url.pathname;
---

<nav class="">
  <div
    class="container flex items-center justify-center p-6 mx-auto capitalize"
  >
    {
      links.map(({ href, text }) => (
        <div>
          <a href={href} class="mx-1.5 sm:mx-6">
            {text}
          </a>

          {currentPath === href ? (
            <div
              transition:name="menu-line"
              class="border-b-2 border-blue-500 mx-4"
            />
          ) : (
            <div class="border-b-2 border-transparent" />
          )}
        </div>
      ))
    }
  </div>
</nav>
